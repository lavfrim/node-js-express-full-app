<h1>Add course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Add course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Add course price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="price">URL picture</label>
        <span class="helper-text" data-error="Add picture URL"></span>
    </div>

    <button class="btn btn-primary" type="submit">
        Add course
    </button>
</form>